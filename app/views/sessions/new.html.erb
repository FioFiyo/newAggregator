<section>
	<h1>Login Page</h1>
	<%= form_tag '/login', method: :post do %>
		<div>
			<%= label_tag :email %>
			<%= text_field_tag :email %>
		</div>
		<div>
			<%= label_tag :password %>
			<%= password_field_tag :password %>
		</div>

		<%= submit_tag "Login" %>
	<% end %>
</section>
<%= link_to "Back to home", welcome_index_path %>